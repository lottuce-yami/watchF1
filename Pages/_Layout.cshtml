<script src="js/player/player.js" type="text/javascript"></script>
<script type="text/javascript">
    async function getPlayer(video, preview) {
        var player = new Playerjs({id:"player", file:video, poster:preview});
    }
</script>
<!-- /Player -->

<!-- Functions -->
<script>
    function parseEmoji(id) {
        twemoji.parse(document.getElementById(id))
    }

    function download(file, name) {
        var a = document.createElement("a");
        a.href = file;
        a.setAttribute("download", name);
        a.click();
    }
    
    window.clipboardCopy = {
        copyText: function(text) {
            navigator.clipboard.writeText(text)
            .catch(function (error) {
                alert(error);
            });
        }
    }
</script>
<!-- /Functions -->

<!-- Blazor -->
<script src="_framework/blazor.server.js"  autostart="false"></script>
<script>
    Blazor.start({
        reconnectionOptions: {
          maxRetries: 5,
          retryIntervalMilliseconds: 5000
        }
    });
</script>
